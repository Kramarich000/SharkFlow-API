{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc", "closure"]
  },
  "source": {
    "include": [
      "utils/",
      "routes/",
      "middlewares/",
      "socket/",
      "telegramBot/"
    ],
    "includePattern": "\\.js$",
    "excludePattern": "(node_modules/|docs/|docs-site/)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true,
      "includeDate": false
    }
  },
  "opts": {
    "destination": "./docs/jsdoc/",
    "recurse": true,
    "readme": "./README.md",
    "template": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "title": "SharkFlow API Documentation",
      "logo": {
        "link": "https://github.com/your-username/sharkflow-api",
        "width": "32px",
        "height": "32px"
      },
      "footer": {
        "text": "SharkFlow API - Документация"
      }
    }
  }
} 