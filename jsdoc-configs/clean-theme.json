{
  "tags": {
    "allowUnknownTags": true,
    "dictionaries": ["jsdoc"]
  },
  "source": {
    "include": [
      "utils",
      "routes",
      "telegramBot",
      "middlewares",
      "socket",
      "store"
    ],
    "includePattern": ".+\\.js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    }
  },
  "opts": {
    "destination": "./docs/jsdoc-clean",
    "recurse": true,
    "readme": "./README.md",
    "template": "node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "title": "SharkFlow API Documentation",
      "logo": {
        "link": "https://kramarich000.github.io/SharkFlow-API",
        "width": "32px",
        "height": "32px"
      },
      "footer": {
        "text": "SharkFlow API - Документация"
      }
    }
  }
} 